{
  "name": "cxa-track",
  "version": "2.0.0",
  "description": "Convenient CLI to quickly update CxA tracked links",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/cxa-track"
  },
  "exports": "./lib/index.js",
  "bin": {
    "cxa": "./bin/cxa.js"
  },
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "xo && npm run -s test:unit",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "test:watch": "npm run -s test:unit -- --watch",
    "release:check": "semantic-release --dry-run",
    "prepare": "husky install"
  },
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/cxa-track",
  "bugs": {
    "url": "https://github.com/sinedied/cxa-track/issues"
  },
  "keywords": [
    "cli",
    "cxa",
    "advocate",
    "microsoft",
    "links"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.1",
    "clipboardy": "^3.0.0",
    "conf": "^10.2.0",
    "gray-matter": "^4.0.2",
    "minimist": "^1.2.5",
    "update-notifier": "^6.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "semantic-release": "^19.0.3",
    "semantic-release-npm-github": "^3.0.0",
    "xo": "^0.51.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ],
    "rules": {
      "unicorn/prevent-abbreviations": "off",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "lib/**/*.js"
    ],
    "resolver": "<rootDir>/test/jest.resolver.cjs",
    "silent": true
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ]
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "files": [
    "index.js",
    "lib/*.js",
    "bin/cxa.js"
  ]
}
